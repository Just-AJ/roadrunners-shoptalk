{{!-- This partial will help with the design of the forum for each users post.


title of post 
user of post 
date created
Actual post 

comments from other users
Add a comment partial  --}}

<div class="card" id="{{id}}">
    <div class="card__header u-flex u-justify-center">
        <div class="u-align-center"><span class="avatar"><img src="{{user.avatar}}" ></span><p class="font-bold px-3">{{title}}</p></div>
    </div>
    <div class="content">
        <p>{{copy}}<a href="#">#place #holder #cirrus</a></p>
    </div>
    <div class="card__footer level content">{{user.username}} {{format_date created_at}}</div>
    <div class="card__action-bar u-center">
        <button class="btn-transparent outline" id="translateButton"><i class="fa fa-solid fa-language"></i> Translate</button> 
        <button class="btn-transparent outline"><i class=" fa fa-solid fa-comment"></i><a href="/post/{{id}}">Add Comment</a></button> <span><i class="fa fa-solid fa-comments"></i> {{comments.length}} {{format_plural "comment" comments.length}}</span>
        <button class="btn-transparent outline" type="submit" class="edit-link"><a href="/forum/edit/{{id}}" >Edit post</a></button>
        <button class="btn-transparent outline" type="button" id="delete-link-{{id}}" data-post-id="{{id}}">Delete post</button>
    </div>
</div>

<script src="/javascript/delete-post.js"></script>
